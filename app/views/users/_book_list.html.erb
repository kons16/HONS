<% if @books.present? %>
  <% @books.each do |book| %>
    <div class="list">
      <%= link_to (image_tag(book.image_url, style: "width: 70px;height: 100px;display: inline-block;")), book.url %>
      <%= book.title %>
      <button title="追加" type="submit">本棚に追加</button>
    </div>
  <% end %>
<% end %>